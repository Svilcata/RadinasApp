<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/gornaCheliust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/purvozubche" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageButton"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/vtorozubche" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton2"
            android:layout_toEndOf="@+id/imageButton2"
            android:layout_toRightOf="@+id/imageButton2"
            android:scaleType="centerCrop"
            android:src="@drawable/tretozubche" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageButton3"
            android:layout_toRightOf="@+id/imageButton3"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chetvurtozubche" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageButton4"
            android:layout_toRightOf="@+id/imageButton4"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/petozubche" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageButton5"
            android:layout_toRightOf="@+id/imageButton5"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/shestozubche" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageButton6"
            android:layout_toRightOf="@+id/imageButton6"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/sedmozubche" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageButton7"
            android:layout_toRightOf="@+id/imageButton7"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/osmozubche" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/dolnaCheliust"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/gornaCheliust"
        android:orientation="horizontal">


    </LinearLayout>


</RelativeLayout>
